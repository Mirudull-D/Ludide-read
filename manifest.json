{
  "manifest_version": 3,
  "name": "LucidRead",
  "version": "1.0",
  "description": "Read Ease Mode + Word-click Wikipedia popup",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
